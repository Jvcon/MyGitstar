---
// 导入 Starlight 的内部组件，以复用其样式和功能
import SocialIcons from '@astrojs/starlight/components/SocialIcons.astro';
import ThemeSelect from '@astrojs/starlight/components/ThemeSelect.astro';
import { StarlightConfig } from 'virtual:starlight/user-config';

// 定义视图切换的链接
const views = [
  { label: 'Doc', href: '/' },
  { label: 'Table', href: '/table' },
  { label: 'Kanboard', href: '/kanboard' },
];
---

<div class="header-container sl-flex">
  <!-- 左侧部分 -->
  <div class="left-items sl-flex">
    <a href="/" class="site-title">{StarlightConfig.title}</a>
    <nav class="nav-links">
      <a href="/" class="nav-link">Detail</a>
      <a href="/manage" class="manage-button">Manage</a>
      <!-- 您可以在这里添加更多左侧链接 -->
    </nav>
  </div>

  <!-- 右侧部分 -->
  <div class="right-items sl-flex">
    <!-- 视图切换器 (使用简单的 details/summary 实现下拉菜单) -->
    <details class="view-switcher">
      <summary class="switcher-summary">View</summary>
      <ul class="switcher-menu">
        {views.map(view => (
          <li><a href={view.href}>{view.label}</a></li>
        ))}
      </ul>
    </details>

    <!-- 复用 Starlight 的社交图标和主题切换器 -->
    <SocialIcons />
    <ThemeSelect />
  </div>
</div>

<style>
  /* 在这里添加您的自定义样式，可以使用 Tailwind 或原生 CSS */
  .header-container {
    width: 100%;
    padding: 1rem 2rem;
    justify-content: space-between;
    align-items: center;
    border-bottom: 1px solid var(--sl-color-gray-5);
    background-color: var(--sl-color-bg);
  }
  .left-items, .right-items {
    gap: 1.5rem;
    align-items: center;
  }
  .site-title {
    font-size: 1.25rem;
    font-weight: bold;
    text-decoration: none;
    color: var(--sl-color-text-accent);
  }
  .nav-link {
    text-decoration: none;
    color: var(--sl-color-text-1);
    font-size: 1rem;
  }
  .nav-link:hover {
    color: var(--sl-color-text-accent);
  }
  .manage-button {
    display: inline-block;
    padding: 0.5rem 1rem;
    background-color: var(--sl-color-accent);
    color: var(--sl-color-white);
    border-radius: 9999px; /* 圆角矩形 */
    text-decoration: none;
    font-weight: 500;
  }
  .view-switcher {
    position: relative;
  }
  .switcher-summary {
    cursor: pointer;
  }
  .switcher-menu {
    position: absolute;
    right: 0;
    margin-top: 0.5rem;
    background-color: var(--sl-color-bg-sidebar);
    border: 1px solid var(--sl-color-gray-5);
    border-radius: 0.5rem;
    padding: 0.5rem;
    list-style: none;
    z-index: 10;
    min-width: 120px;
  }
  .switcher-menu a {
    display: block;
    padding: 0.25rem 0.5rem;
    text-decoration: none;
    color: var(--sl-color-text-1);
  }
</style>
