---
// src/layouts/Layout.astro
import Header from "../components/Header.astro";
import "../styles/global.css";
import { pwaInfo } from 'virtual:pwa-info';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="zh-CN">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="MyGitstar" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon-96x96.png" sizes="96x96" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="shortcut icon" href="/favicon.ico" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <meta name="apple-mobile-web-app-title" content="MyGitstar" />
    <meta name="generator" content={Astro.generator} />
    { pwaInfo && <Fragment set:html={pwaInfo.webManifest.linkTag} /> }
    <title>{title}</title>
  </head>
  <body>
        <div id="app-root">
    <Header />
    <main class="page-container">
      <slot />
    </main>
    </div>
  </body>
</html>
<style is:global>
  #app-root {
    display: flex;
    flex-direction: column;
    height: 100vh; /* 使用视口高度确保占满全屏 */
    padding: 1rem;
    padding-top: 0; /* Header 自己有内边距，这里就不加了 */
    box-sizing: border-box;
    gap: 1rem; /* 在 Header 和 main 之间创建间距 */
  }
    #app-root > header {
    flex-shrink: 0;
  }
    .page-container {
    flex-grow: 1;
    min-height: 0; /* Flexbox 关键修复: 允许子元素正确地滚动 */
    width: 100%;
    display: flex; /* 让其子元素也能使用 flex 布局 */
  }
</style>
